{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "esnext", "es2015.promise"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "declaration": false,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "~/*": ["*"],
      "~models/*": ["models/*"],
      "~storage/*": ["storage/*"],
      "~commands/*": ["commands/*"],
      "~typings/*": ["typings/*"],
      "~tests/*": ["__tests__/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
